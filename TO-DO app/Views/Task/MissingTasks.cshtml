@model List<ToDoApp.Models.TaskModel>

<div class="container">
    <h2>⏳ Missing Tasks</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td class="text-danger">@task.DueDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
