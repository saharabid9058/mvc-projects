@model RecipeManager.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>
    <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Are you sure you want to delete this recipe?</h3>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Ingredients:</strong> @Model.Ingredients</p>
            <p><strong>Instructions:</strong> @Model.Instructions</p>
            <p><strong>Cooking Time:</strong> @Model.CookingTime minutes</p>
        </div>
    </div>
    <form method="post" class="mt-4">
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger btn-lg me-3">
                <i class="bi bi-trash me-2"></i> Delete Recipe
            </button>
            <a href="@Url.Action("Index", "Recipe")" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle me-2"></i> Cancel
            </a>
        </div>
    </form>
</div>
<style>
    .container {
        max-width: 700px;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .bi {
        font-size: 1.2rem;
    }
</style>
